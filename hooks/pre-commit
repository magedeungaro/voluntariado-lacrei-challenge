#!/bin/bash
# Pre-commit hook to upload changed setup scripts to S3

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Checking for changed setup scripts...${NC}"

# Get the scripts directory path
SCRIPTS_DIR="terraform/modules/lacrei-infra/scripts"

# Check if scripts directory exists
if [ ! -d "$SCRIPTS_DIR" ]; then
    echo -e "${YELLOW}Scripts directory not found, skipping S3 upload${NC}"
    exit 0
fi

# Get list of changed script files in the staging area
CHANGED_SCRIPTS=$(git diff --cached --name-only --diff-filter=ACM | grep "^${SCRIPTS_DIR}/.*\.sh$" || true)

if [ -z "$CHANGED_SCRIPTS" ]; then
    echo -e "${GREEN}No setup scripts changed${NC}"
    exit 0
fi

echo -e "${YELLOW}Changed scripts detected:${NC}"
echo "$CHANGED_SCRIPTS"

# Check if AWS CLI is available
if ! command -v aws &> /dev/null; then
    echo -e "${RED}Error: AWS CLI is not installed${NC}"
    echo -e "${RED}Please install AWS CLI or skip this hook with --no-verify${NC}"
    exit 1
fi

# Get environment from current branch or default to staging
BRANCH=$(git rev-parse --abbrev-ref HEAD)
if [ "$BRANCH" = "main" ]; then
    ENVIRONMENT="production"
elif [ "$BRANCH" = "staging" ]; then
    ENVIRONMENT="staging"
else
    echo -e "${YELLOW}Not on main or staging branch, skipping S3 upload${NC}"
    exit 0
fi

# S3 bucket name pattern (adjust if needed)
PROJECT_NAME="lacrei-saude"
S3_BUCKET="${PROJECT_NAME}-${ENVIRONMENT}-scripts"

echo -e "${YELLOW}Uploading scripts to s3://${S3_BUCKET}...${NC}"

# Check if bucket exists
if ! aws s3 ls "s3://${S3_BUCKET}" &> /dev/null; then
    echo -e "${RED}Error: S3 bucket ${S3_BUCKET} does not exist or is not accessible${NC}"
    echo -e "${YELLOW}Run 'terraform apply' first to create the bucket, or skip with --no-verify${NC}"
    exit 1
fi

# Upload each changed script
UPLOAD_FAILED=0
for script in $CHANGED_SCRIPTS; do
    # Get just the filename
    FILENAME=$(basename "$script")
    
    echo -e "${YELLOW}Uploading ${FILENAME}...${NC}"
    
    if aws s3 cp "$script" "s3://${S3_BUCKET}/${FILENAME}" --no-progress; then
        echo -e "${GREEN}✓ Uploaded ${FILENAME}${NC}"
    else
        echo -e "${RED}✗ Failed to upload ${FILENAME}${NC}"
        UPLOAD_FAILED=1
    fi
done

if [ $UPLOAD_FAILED -eq 1 ]; then
    echo -e "${RED}Some scripts failed to upload to S3${NC}"
    echo -e "${YELLOW}Continue with commit anyway? (y/n)${NC}"
    read -r response
    if [[ ! "$response" =~ ^[Yy]$ ]]; then
        exit 1
    fi
fi

echo -e "${GREEN}Script upload complete!${NC}"
exit 0
