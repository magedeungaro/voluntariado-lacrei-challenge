# Example terraform.tfvars file
# Copy to terraform.tfvars and fill in sensitive values

aws_region   = "us-east-1"
environment  = "dev"
project_name = "lacrei-saude"

# Instance type (t3.micro is free tier eligible)
instance_type = "t3.micro"

# Database (fill these in)
db_name     = "lacrei_db"
db_user     = "lacrei_user"
db_password = "CHANGE_ME_STRONG_PASSWORD"

# Django (generate a secure key)
django_secret_key = "CHANGE_ME_DJANGO_SECRET_KEY"

# VPC CIDR
vpc_cidr = "10.0.0.0/16"

# Create judge user for demo
create_ssm_judge_user = true
